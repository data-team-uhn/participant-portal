{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["es2020", "dom","webworker"],
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "./lib",
		"resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
        "PORTAL/*": [
            "src/*"
        ]
    }
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"],
}
